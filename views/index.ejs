<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Spotify</h1>
    <a href="/upload">Upload New Song</a>
    <a href="/favorites">View Favorites</a>
    
    <ul>
        <% songs.forEach(song => { %>
            <li>
                <p><%= song.title %> by <%= song.artist %></p>
                
                <audio controls>
                    <source src="<%= song.path %>" type="audio/mpeg">
                </audio>

                <a href="/favorite/<%= song.id %>" style="margin-right: 10px;">Add to Favorites</a>
                <a href="/delete/<%= song.id %>" style="background-color: red;">Delete</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
